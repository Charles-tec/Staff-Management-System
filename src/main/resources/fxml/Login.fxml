<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tec.staffmanagementsystem.controller.LoginController">
   <children>
      <Rectangle fill="DODGERBLUE" height="380.0" layoutX="-96" layoutY="-34.0" stroke="#ffffff8b" strokeType="INSIDE" width="588.0" />
      <Label fx:id="lblLogin" layoutX="97.0" layoutY="46.0" text="Login" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font>
      </Label>

      <TextField fx:id="userName" layoutX="98.0" layoutY="92.0" prefHeight="36.0" prefWidth="230.0" promptText="Username" />
      <PasswordField fx:id="password" layoutX="98.0" layoutY="141.0" onAction="#login" prefHeight="36.0" prefWidth="230.0" promptText="Password" />
      <SplitMenuButton fx:id="btnLogin" layoutX="99.0" layoutY="193.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="230.0" styleClass="btnGreen" text="Select the Employee Type" textFill="BLACK">
         <items>
            <MenuItem onAction="#login" text="Administrators" />
            <MenuItem onAction="#login1" text="Engineers" />
            <MenuItem onAction="#login2" text="Students" />

         </items>
         <font>
            <Font size="15.0" />
         </font>
         <effect>
            <DropShadow blurType="ONE_PASS_BOX" />
         </effect></SplitMenuButton>



   </children>

   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <cursor>
      <Cursor fx:constant="SE_RESIZE" />
   </cursor>
   <effect>
      <Bloom threshold="1.0" />
   </effect>
</AnchorPane>
